<%- include('../partials/header') %>
<main>
    <h1>Faculty Directory</h1>
    <p>See our current faculty members and click on any member to see detailed information including their name, department, or title.</p>

    <div class="faculty-sorting">
        <span>Sort by: </span>
        <a href="/faculty/" class="<%= currentSort === 'name' ? 'active' : '' %>">Name</a>
        <a href="/faculty/?sort=department" class="<%= currentSort === 'department' ? 'active' : '' %>">Department</a>
        <a href="/faculty/?sort=title" class="<%= currentSort === 'title' ? 'active' : '' %>">Title</a>
    </div>
    
    <div class="faculty-list">
        <% Object.values(faculty).forEach(facultyMember => { %>
            <div class="faculty-card">
                <h3><a href="/faculty/<%= facultyMember.slug %>"><%= facultyMember.name %></a></h3>
                <p class="faculty-title"><%= facultyMember.title %></p>
                <p class="faculty-department"><%= facultyMember.department %></p>
            </div>
        <% }); %>
    </div>
    <div class="navigation">
        <p><a href="/">&larr; Back to Home</a></p>
    </div>
</main>
<%- include('../partials/footer') %>